<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tz.co.neelansoft.personalaccountant">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddNewRecordActivity" android:parentActivityName=".MainActivity" android:label="@string/new_record"/>
        <activity android:name=".TransactionDetailsActivity" android:parentActivityName=".MainActivity" android:label="@string/transaction_details"/>
        <activity android:name=".AccountActivity" android:parentActivityName=".MainActivity" android:label="@string/my_account"/>
    </application>

</manifest>